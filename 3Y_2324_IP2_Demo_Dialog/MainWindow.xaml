        <Label x:Name="lblDisplayFilePath" Content="This will be the file path" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="lblDisplayFileName" Content="This will be the file name" HorizontalAlignment="Left" Margin="95,92,0,0" VerticalAlignment="Top" FontSize="24"/>

    </Grid>
